                    <Label></Label>
                    <Button Content="  Book  " HorizontalAlignment="Right" Style="{StaticResource ButtonStyle}" FontWeight="ExtraBold" ToolTip="Order place"/>
                </TabPanel>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="5">
                <TabPanel>
                <CheckBox></CheckBox>
                <Image Width="200" Height="200" >
                    <Image.Source>
                        <BitmapImage  UriSource="C:\Users\nurane.sherifova\source\repos\WPFFinalProject\Images\bruce.jpg" />
                    </Image.Source>
                </Image>
                </TabPanel>
                <Label Content="Movie Name" FontFamily="Verdana" FontWeight="ExtraBold"></Label>
                <TextBox></TextBox>
