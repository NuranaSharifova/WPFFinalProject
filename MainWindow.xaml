                <TextBox></TextBox>
                <Label></Label>
                <TabPanel>
                    <Label Content="Rate" FontFamily="Verdana" FontWeight="ExtraBold" ToolTip="Rate movie"></Label>
                    <Expander VerticalAlignment="Center" ExpandDirection="Right" >
                        <TabPanel>
                            <star:Star/>
                        </TabPanel>
                    </Expander>
                </TabPanel>
                <Label></Label>
                <TabPanel>
                    <Button Content=" + Wishlist   " HorizontalAlignment="Left"  Style="{StaticResource ButtonStyle}" FontWeight="ExtraBold" ToolTip="Add movie to watch later"></Button>
                    <Label></Label>
                    <Button Content="  Book  " HorizontalAlignment="Right" Style="{StaticResource ButtonStyle}" FontWeight="ExtraBold" ToolTip="Order place"/>
                </TabPanel>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
